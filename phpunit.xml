<?xml version="1.0" encoding="UTF-8"?>

<!-- https://phpunit.readthedocs.io/en/latest/configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
    backupGlobals="false"
    backupStaticProperties="true"
    colors="true"
>
    <php>
        <ini name="display_errors" value="1" />
        <ini name="error_reporting" value="-1" />
        <server name="APP_ENV" value="test" force="true" />
        <server name="SHELL_VERBOSITY" value="-1" />
    </php>


    <testsuites>
        <testsuite name="Unit\Domain\Cep">
            <directory>tests/Unit/Domain/Cep</directory>
        </testsuite>

        <testsuite name="Unit\Application\Services\Cep">
            <directory>tests/Unit/Application/Services/Cep</directory>
        </testsuite>

        <testsuite name="Unit\Infrastructure\RestClients">
            <directory>tests/Unit/Infrastructure/RestClients</directory>
        </testsuite>

        <testsuite name="Unit\Infrastructure\Commands\Symofny">
            <directory>tests/Unit/Infrastructure/Commands/Symfony</directory>
        </testsuite>
    </testsuites>

    <!-- 

    <extensions>
        <bootstrap class="DAMA\DoctrineTestBundle\PHPUnit\PHPUnitExtension" />
    </extensions> -->
</phpunit>